<Window x:Class="BiometricStoryboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local ="clr-namespace:BiometricStoryboard"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:cm="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1263.2" Loaded="Window_Loaded" ResizeMode="NoResize"
        >
    <Window.Resources>
        <d3:TickToDateLabelProvider x:Key="tickToDate"/>
    </Window.Resources>

    <Grid x:Name="MediaGrid"  Background="#FF001528" Margin="0,0,-3,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Content="SnapShot" HorizontalAlignment="Left" Margin="648,392,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
        <Button Content="Export" HorizontalAlignment="Left" Margin="728,392,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
        <Button Content="Play" x:Name="PlayButton" Height="30" HorizontalAlignment="Left" Margin="418,392,0,0" VerticalAlignment="Top" Width="75" Click="playButtonClick" />
        <Button Content="Stop" Height="30" HorizontalAlignment="Left" Margin="573,392,0,0" x:Name="StopButton" VerticalAlignment="Top" Width="75" Click="StopButton_Click" />
        <Menu x:Name="File" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="50">
            <MenuItem Header="_File" RenderTransformOrigin="0.509,0.741" x:Name="FileMenu">
                <MenuItem Header="_Open" HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="_Save" HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="_Save As.." HorizontalAlignment="Left" Width="145" x:Name="SaveMenu" Click="SaveMenu_Click"/>
                <Separator HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="_Exit" HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
        </Menu>
        <Button Content="Open Media" Height="30" HorizontalAlignment="Right" Margin="0,392,842,0" x:Name="OpenMediaButton" VerticalAlignment="Top" Width="82" Click="OpenMediaButton_Click" />
        <Slider Height="20" Margin="0,370,1163.2,0" x:Name="LeftVolumeSlider" VerticalAlignment="Top" ValueChanged="LeftVolumeSlider_ValueChanged" />
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="100,370,0,0" x:Name="LeftCurrentTimeTextBlock" Text="00:00s" VerticalAlignment="Top" Width="50" Foreground="White"/>
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="740,370,0,0" x:Name="RightCurrentTimeTextBlock" Text="00:00s" VerticalAlignment="Top" Width="50" Foreground="White"/>
        <Button Content="Make Note" Height="30" HorizontalAlignment="Left" Margin="808,392,0,0" x:Name="MakeNoteButton" VerticalAlignment="Top" Width="75" Click="MakeNoteButton_Click" />
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="563,371,0,0" x:Name="LeftEndTimeTextBlock" Text="00:00s" VerticalAlignment="Top" Foreground="White" Width="55"/>
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="1202,371,0,0" x:Name="RightEndTimeTextBlock" Text="00:00s" VerticalAlignment="Top" Foreground="White" Width="55"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="350" Margin="0,20,0,0" VerticalAlignment="Top" Width="620" Background="Black"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="350" Margin="640,19,-2.4,0" VerticalAlignment="Top" Width="620" Background="Black"/>
        <MediaElement Stretch="Fill" HorizontalAlignment="Left" LoadedBehavior="Manual" Opacity="1" AllowDrop="True" IsMuted="False" Height="350" Margin="0,20,0,0" VerticalAlignment="Top" Width="620" x:Name="LeftVideo" MediaEnded="LeftVideo_MediaEnded" MediaOpened="LeftVideo_MediaOpened"/>
        <MediaElement Stretch="Fill" HorizontalAlignment="Right" LoadedBehavior="Manual" Opacity="1" AllowDrop="True" IsMuted="False" Height="350" Margin="0,20,1,0" VerticalAlignment="Top" Width="620" x:Name="RightVideo" MediaEnded="RightVideo_MediaEnded" MediaOpened="RightVideo_MediaOpened" OpacityMask="Black" />
        <Button Content="Pause" HorizontalAlignment="Left" Margin="493,392,0,0" VerticalAlignment="Top" Width="75" Height="30" x:Name="PauseButton" Click="PauseButton_Click"/>
        <Slider HorizontalAlignment="Left" Margin="640,370,0,0" VerticalAlignment="Top" Width="95" Height="20" x:Name="RightVolumeSlider"/>
        <ProgressBar Height="22" HorizontalAlignment="Right" Margin="0,370,702.6,0" x:Name="LeftProgressBar" VerticalAlignment="Top" Width="400" Foreground="#FF5F1718" Background="#FF5F5F5F" />
        <ProgressBar Height="22" HorizontalAlignment="Right" Margin="0,370,60.6,0" x:Name="RightProgressBar" VerticalAlignment="Top" Width="402" Foreground="#FF5F1718" Background="#FF5F5F5F" />
        <Slider PreviewMouseLeftButtonUp="LeftSeekSlider_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="LeftSeekSlider_PreviewMouseLeftButtonDown" MouseLeftButtonUp="LeftSeekSlider_MouseLeftButtonUp" Height="20" HorizontalAlignment="Left" Margin="151,371,0,0" x:Name="LeftSeekSlider" VerticalAlignment="Top" Width="400" Background="{x:Null}" />
        <Slider PreviewMouseLeftButtonUp="RightSeekSlider_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="RightSeekSlider_PreviewMouseLeftButtonDown" MouseLeftButtonUp="RightSeekSlider_MouseLeftButtonUp" Height="20" HorizontalAlignment="Left" Margin="791,371,0,0" x:Name="RightSeekSlider" VerticalAlignment="Top" Width="402" Background="{x:Null}" />
        <d3:ChartPlotter Margin="0,422,3,26" x:Name="Plotter" MouseLeftButtonDown="Chart_MouseLeftButtonDown">
            <d3:HorizontalAxisTitle>Time (ms)</d3:HorizontalAxisTitle>
            <d3:VerticalAxisTitle>Data</d3:VerticalAxisTitle>
        </d3:ChartPlotter>
        <Slider HorizontalAlignment="Left" Margin="27,668,0,0" VerticalAlignment="Top" Width="1230"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,399,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.4,0.25" Width="112" Foreground="White">Choose data source:</TextBlock>
        <ComboBox HorizontalAlignment="Left" Margin="127,399,0,0" VerticalAlignment="Top" x:Name="Sources" Width="155" SelectedItem="{Binding SelectedSource}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <cm:ActionMessage MethodName="SourceChange"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>
        <Button Content="Draw" HorizontalAlignment="Left" Name="DrawButton" Margin="888,392,0,0" VerticalAlignment="Top" Width="76" Height="30" Click="DrawButton_Click" />
    </Grid>
</Window>
