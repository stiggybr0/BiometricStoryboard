<Window x:Class="BiometricStoryboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Loaded="Window_Loaded">
    <Grid x:Name="MediaGrid"  Background="#FF0A0A0A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <MediaElement HorizontalAlignment="Left" LoadedBehavior="Manual" Opacity="1" AllowDrop="True" Stretch="Uniform" IsMuted="False" Height="315" Margin="0,20,0,0" VerticalAlignment="Top" Width="626" Name="LeftVideo" MediaEnded="LeftVideo_MediaEnded" MediaOpened="LeftVideo_MediaOpened"/>
        <MediaElement HorizontalAlignment="Right" LoadedBehavior="Manual" Opacity="1" AllowDrop="True" Stretch="Uniform" IsMuted="False" Height="315" Margin="0,20,0,0" VerticalAlignment="Top" Width="626" Name="RightVideo" MediaEnded="RightVideo_MediaEnded" MediaOpened="RightVideo_MediaOpened" />
        <Button Content="Pause" HorizontalAlignment="Left" Margin="513,358,0,291" Width="75" Name="PauseButton" Click="PauseButton_Click" />
        <Button Content="SnapShot" HorizontalAlignment="Left" Margin="675,358,0,0" VerticalAlignment="Top" Width="75" Height="31"/>
        <Button Content="Export" HorizontalAlignment="Left" Margin="756,358,0,0" VerticalAlignment="Top" Width="75" Height="31"/>
        <Button Content="Play" Name="PlayButton" Height="31" HorizontalAlignment="Left" Margin="432,359,0,0" VerticalAlignment="Top" Width="75" Click="playButtonClick" />
        <Button Content="Stop" Height="31" HorizontalAlignment="Left" Margin="594,358,0,0" Name="StopButton" VerticalAlignment="Top" Width="75" Click="StopButton_Click" />
        <Menu x:Name="File" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="50">
            <MenuItem Header="_File" RenderTransformOrigin="0.509,0.741">
                <MenuItem Header="_Open" HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="_Save" HorizontalAlignment="Left" Width="145"/>
                <Separator HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="_Exit" HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
        </Menu>
        <Image HorizontalAlignment="Left" Height="281" Margin="0,400,0,0" VerticalAlignment="Top" Width="1258" />
        <Button Content="Browse Media" Height="35" HorizontalAlignment="Left" Margin="1167,359,0,0" Name="RightBrowse" VerticalAlignment="Top" Width="91" Click="RightBrowse_Click" />
        <Button Content="Open Media" Height="30" HorizontalAlignment="Right" Margin="0,359,871,0" Name="OpenMediaButton" VerticalAlignment="Top" Width="82" Click="OpenMediaButton_Click" />
        <Slider Height="23" Margin="0,312,1158,0" Name="LeftVolumeSlider" VerticalAlignment="Top" ValueChanged="LeftVolumeSlider_ValueChanged" />
        <Slider Height="23" HorizontalAlignment="Right" Margin="0,312,516,0" Name="RightVolumeSlider" VerticalAlignment="Top" Width="100" />
        <ProgressBar Height="23" HorizontalAlignment="Right" Margin="0,312,632,0" Name="LeftProgressBar" VerticalAlignment="Top" Width="473" />
        <ProgressBar Height="23" HorizontalAlignment="Right" Margin="0,312,0,0" Name="RightProgressBar" VerticalAlignment="Top" Width="463" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="106,312,0,0" Name="LeftCurrentTimeTextBlock" Text="00:00s" VerticalAlignment="Top" Width="41" Foreground="White"/>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="748,312,0,0" Name="RightCurrentTimeTextBlock" Text="00:00s" VerticalAlignment="Top" Width="41" Foreground="White"/>
        <Slider PreviewMouseLeftButtonUp="LeftSeekSlider_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="LeftSeekSlider_PreviewMouseLeftButtonDown" MouseLeftButtonUp="LeftSeekSlider_MouseLeftButtonUp" Height="23" HorizontalAlignment="Left" Margin="157,312,0,0" Name="LeftSeekSlider" VerticalAlignment="Top" Width="469" />
        <Slider PreviewMouseLeftButtonUp="RightSeekSlider_PreviewMouseLeftButtonUp" PreviewMouseLeftButtonDown="RightSeekSlider_PreviewMouseLeftButtonDown" MouseLeftButtonUp="RightSeekSlider_MouseLeftButtonUp" Height="23" HorizontalAlignment="Left" Margin="799,312,0,0" Name="RightSeekSlider" VerticalAlignment="Top" Width="459" />
        <Button Content="Browse Media" Height="35" HorizontalAlignment="Left" Margin="0,359,0,0" Name="LeftBrowse" VerticalAlignment="Top" Width="91" Click="LeftBrowse_Click"/>
        <Button Content="Make Note" Height="31" HorizontalAlignment="Left" Margin="837,358,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
